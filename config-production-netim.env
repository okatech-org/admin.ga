# Configuration Production - administration.ga
# Basée sur la configuration Netim réelle

# Application
APP_URL=https://administration.ga
NEXT_PUBLIC_APP_URL=https://administration.ga
NODE_ENV=production

# Domaine et IP réelle
DOMAIN=administration.ga
REAL_IP=185.26.106.234
NETIM_DNS_SERVERS="ns1.netim.net,ns2.netim.net,ns3.netim.net"
NETIM_MX_SERVERS="mx1.netim.net,mx2.netim.net"

# Base de données (à configurer)
DATABASE_URL=postgresql://user:password@localhost:5432/administration_ga

# NextAuth
NEXTAUTH_URL=https://administration.ga
NEXTAUTH_SECRET=your-nextauth-secret-here

# Email (compatible avec SPF Netim)
RESEND_API_KEY=your-resend-api-key
EMAIL_FROM=noreply@administration.ga
SENDGRID_FROM_EMAIL=noreply@administration.ga
SENDGRID_FROM_NAME="Administration GA"

# SMS et WhatsApp
ENABLE_SMS_NOTIFICATIONS=true
TWILIO_ACCOUNT_SID=your-twilio-sid
TWILIO_AUTH_TOKEN=your-twilio-token
TWILIO_PHONE_NUMBER=your-twilio-number

ENABLE_WHATSAPP_NOTIFICATIONS=true
WHATSAPP_API_URL=https://api.whatsapp.com
WHATSAPP_API_TOKEN=your-whatsapp-token
WHATSAPP_PHONE_NUMBER_ID=your-whatsapp-id

# Paiements Gabon
ENABLE_PAYMENT_GATEWAY=true
AIRTEL_MONEY_API_URL=https://api.airtel.com
AIRTEL_MONEY_CLIENT_ID=your-airtel-client-id
AIRTEL_MONEY_CLIENT_SECRET=your-airtel-secret

MOOV_MONEY_API_URL=https://api.moov.com
MOOV_MONEY_API_KEY=your-moov-api-key
MOOV_MONEY_SECRET_KEY=your-moov-secret

# Stockage
S3_ENDPOINT=your-s3-endpoint
S3_ACCESS_KEY_ID=your-s3-key
S3_SECRET_ACCESS_KEY=your-s3-secret
S3_BUCKET_NAME=admin-ga-documents
S3_REGION=us-east-1

# Redis (optionnel)
REDIS_URL=redis://localhost:6379

# Sécurité
CORS_ORIGIN=https://administration.ga
ENCRYPTION_KEY=your-encryption-key
JWT_SECRET=your-jwt-secret

# Logs
LOG_LEVEL=info
LOG_FORMAT=json

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Features
ENABLE_OCR_PROCESSING=true
ENABLE_ESIGNATURE=true

# SSL/TLS
SSL_ENABLED=true
SSL_CERT_PATH=/etc/letsencrypt/live/administration.ga/fullchain.pem
SSL_KEY_PATH=/etc/letsencrypt/live/administration.ga/privkey.pem

# Monitoring
ENABLE_MONITORING=true
SENTRY_DSN=your-sentry-dsn

# Configuration Netim spécifique
NETIM_SPF_RECORD="v=spf1 ip4:185.26.104.0/22 ~all"
NETIM_API_KEY=your-netim-api-key
NETIM_API_SECRET=your-netim-api-secret
