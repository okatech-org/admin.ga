{
  "css.validate": true,
  "less.validate": true,
  "scss.validate": true,
  "html.validate": {
    "scripts": true,
    "styles": true
  },
  "eslint.options": {
    "rules": {
      "no-inline-styles": "off"
    }
  },
  "edge.validate": false,
  "edge.experimental.validate": false,
  "webhint.enable": false,
  "edge.enableDeveloperTools": false,
  "markdownlint.config": {
    "MD022": false,
    "MD032": false,
    "MD031": false,
    "MD040": false,
    "MD034": false,
    "MD009": false,
    "MD047": false
  },
  "html.customData": [
    {
      "version": 1.1,
      "tags": [],
      "globalAttributes": [
        {
          "name": "style",
          "description": "Inline styles for dynamic branding"
        }
      ]
    }
  ],
  "files.associations": {
    "*.tsx": "typescriptreact",
    "*.yml": "yaml",
    "*.yaml": "yaml"
  },
  "yaml.schemas": {
    "https://json.schemastore.org/github-workflow.json": [
      ".github/workflows/*.yml",
      ".github/workflows/*.yaml"
    ]
  },
  "yaml.validate": true,
  "yaml.completion": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },
  "typescript.preferences.includePackageJsonAutoImports": "off"
}
